{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "sourceMap": true,
    "rootDirs": ["./", "./src"],
    // "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./@types", "node_modules/@types"],
    "types": ["node", "jest"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}

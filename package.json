{
  "name": "@rpidanny/typescript-package-template",
  "version": "1.4.0",
  "description": "Typescript package boilerplate template",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc -p ./tsconfig.build.json",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && jest ./test/*",
    "dev": "ts-node src/index.ts",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpidanny/typescript-package-template.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "template",
    "boilerplate"
  ],
  "author": "Abhishek <abhishek.rpidanny@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rpidanny/typescript-package-template/issues"
  },
  "homepage": "https://github.com/rpidanny/typescript-package-template#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@rpidanny/eslint-config-typescript": "^1.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.0",
    "@types/jest": "^29.4.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "lint-staged": "^15.0.2",
    "prettier": "~3.0.3",
    "semantic-release": "^22.0.6",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "~5.2.2"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
